@model DU_AN_GROUP113_NET105.Models.Entities.Customer
@{
    bool loginFailed = TempData["loginfaild"] != null;
}
  
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-body">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4>Login or Register</h4>
            @if(TempData["loginfaild"] != null)
            {
                <div class="alert alert-danger">@TempData["loginfaild"]</div>
            }
            <form class="aa-login-form" asp-area="Customer" asp-controller="AccountCustomer" asp-action="Login">
                <label for="">Username <span>*</span></label>
                <input type="text" asp-for="Username" placeholder="Username">
                <label for="">Password <span>*</span></label>
                <input type="password" asp-for="Password" placeholder="Password">
                <button class="aa-browse-btn" type="submit">Login</button>
                <label for="rememberme" class="rememberme"><input type="checkbox" id="rememberme"> Remember me </label>
                <p class="aa-lost-password"><a href="#">Lost your password?</a></p>
                <div class="aa-register-now">
                    Don't have an account?<a href="account.html">Register now!</a>
                </div>
            </form>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->


<script>
    $(document).ready(function () {
        if (@(loginFailed ? "true" : "false")) {
            $('#login-modal').modal('show');
        }
    });
</script>

